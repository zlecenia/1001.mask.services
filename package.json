{
  "name": "1001.mask.services",
  "version": "3.0.0",
  "description": "Industrial monitoring system with modular architecture, config validation, and CRUD generation",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run lint && npm run test && npm run build:prod",
    "build:fast": "npm run build:prod",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:module": "vitest run --reporter=verbose",
    "test:integration": "vitest run tests/integration/",
    "test:e2e": "vitest run tests/e2e/",
    "test:property": "vitest run tests/property/",
    "test:all": "npm run test:run && npm run test:integration && npm run test:e2e && npm run test:property",
    "lint:fix": "eslint js/ --ext .js,.vue --fix",
    "module:init": "node tools/init/initComponent.js",
    "module:init-all": "node tools/init/initAll.js",
    "module:list": "node tools/init/listModules.js",
    "module:validate": "node tools/validators/validateModule.js",
    "component:dev": "node tools/dev/componentDevServer.js",
    "component:dev:appFooter": "node tools/dev/componentDevServer.js js/features/appFooter/0.1.0 3001",
    "component:dev:appHeader": "node tools/dev/componentDevServer.js js/features/appHeader/0.1.0 3002",
    "component:dev:mainMenu": "node tools/dev/componentDevServer.js js/features/mainMenu/0.1.0 3003",
    "component:dev:loginForm": "node tools/dev/componentDevServer.js js/features/loginForm/0.1.0 3004",
    "component:dev:pageTemplate": "node tools/dev/componentDevServer.js js/features/pageTemplate/0.1.0 3005",
    "component:dev:pressurePanel": "node tools/dev/componentDevServer.js js/features/pressurePanel/0.1.0 3006",
    "component:dev:realtimeSensors": "node tools/dev/componentDevServer.js js/features/realtimeSensors/0.1.0 3007",
    "component:dev:auditLogViewer": "node tools/dev/componentDevServer.js js/features/auditLogViewer/0.1.0 3008",
    "component:dev:jsonEditor": "node tools/dev/componentDevServer.js js/features/jsonEditor/0.1.0 3009",
    "component:dev:userMenu": "node tools/dev/componentDevServer.js js/features/userMenu/0.1.0 3010",
    "component:dev:serviceMenu": "node tools/dev/componentDevServer.js js/features/serviceMenu/0.1.0 3011",
    "component:dev:systemSettings": "node tools/dev/componentDevServer.js js/features/systemSettings/0.1.0 3012",
    "component:dev:deviceData": "node tools/dev/componentDevServer.js js/features/deviceData/0.1.0 3013",
    "component:dev:reportsViewer": "node tools/dev/componentDevServer.js js/features/reportsViewer/0.1.0 3014",
    "component:dev:deviceHistory": "node tools/dev/componentDevServer.js js/features/deviceHistory/0.1.0 3015",
    "component:dev:testMenu": "node tools/dev/componentDevServer.js js/features/testMenu/0.1.0 3016",
    "component:dev:componentEditor": "node tools/dev/componentDevServer.js js/features/componentEditor/0.1.0 3017",
    "playground": "node tools/dev/playgroundServer.js",
    "readme:generate": "node tools/generators/componentReadmeGenerator.js",
    "screenshots": "node tools/screenshots/generateScreenshots.js",
    "screenshot": "node tools/screenshots/screenshotComponent.js",
    "screenshots:update": "npm run screenshots && git add js/features/**/*.png js/features/**/README.md",
    "analyze": "node tools/analysis/componentAnalyzer.js",
    "config:generate": "node tools/generators/schemaGenerator.js",
    "config:generate-components": "node tools/generators/componentSchemaGenerator.js",
    "config:validate": "node tools/validators/configValidator.js",
    "config:sync": "node tools/sync/syncConfigs.js",
    "config:watch": "node tools/sync/watchConfigs.js",
    "config:update": "npm run config:generate && npm run config:validate",
    "schema:generate": "node tools/generators/schemaGenerator.js --all",
    "schema:validate": "node tools/validators/schemaValidator.js",
    "schema:from-config": "node tools/generators/schemaGenerator.js --from-config",
    "crud:generate": "node tools/generators/crudGenerator.js --all",
    "crud:validate": "node tools/validators/crudValidator.js",
    "crud:update": "node tools/generators/crudGenerator.js --update",
    "sdk:generate": "node tools/generators/sdkGenerator.js",
    "sdk:js": "node tools/generators/sdkGenerator.js --lang=js",
    "sdk:python": "node tools/generators/sdkGenerator.js --lang=python",
    "sdk:go": "node tools/generators/sdkGenerator.js --lang=go",
    "init": "npm run module:init-all && npm run config:generate",
    "update": "npm run config:update && npm run schema:validate",
    "generate": "npm run schema:generate && npm run crud:generate && npm run sdk:generate",
    "validate-all": "npm run config:validate && npm run schema:validate && npm run crud:validate",
    "post-merge": "npm run config:sync",
    "clean": "node tools/clean.js",
    "backup": "node tools/backup.js",
    "generate:module": "node js/moduleManagerWithPackageJson.js"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "express": "^5.1.0",
    "socket.io-client": "^4.6.0",
    "vue": "^3.4.0",
    "vue-i18n": "^9.8.0",
    "vue-router": "^4.2.0",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/test-utils": "^2.4.6",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^11.0.0",
    "eslint": "^8.0.0",
    "fast-check": "^3.23.2",
    "fs-extra": "^11.1.0",
    "glob": "^10.3.0",
    "happy-dom": "^18.0.1",
    "http-server": "^14.0.0",
    "inquirer": "^9.2.0",
    "jsdom": "^27.0.0",
    "json-schema-to-typescript": "^13.1.0",
    "playwright": "^1.55.1",
    "prettier": "^3.1.0",
    "puppeteer": "^24.22.3",
    "terser": "^5.0.0",
    "vite": "^4.5.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zlecenia/1001.mask.services"
  },
  "keywords": [
    "mask-service",
    "vue3",
    "modular-architecture",
    "feature-registry",
    "testing-equipment",
    "industrial-monitoring",
    "config-validation",
    "crud-generation"
  ],
  "license": "PROPRIETARY",
  "config": {
    "modulesDir": "./modules",
    "configsDir": "./configs",
    "toolsDir": "./tools",
    "generateOnChange": true,
    "validateBeforeCommit": true,
    "backupOnUpdate": true
  }
}
