{
  "component": {
    "name": "deviceData",
    "version": "0.1.0",
    "description": "Industrial device monitoring and sensor data management component",
    "author": "1001.mask.services Development Team",
    "category": "monitoring",
    "tags": ["industrial", "device", "sensors", "monitoring", "real-time"],
    "license": "MIT",
    "dependencies": {
      "vue": "^3.0.0",
      "securityService": "^1.0.0",
      "i18nService": "^1.0.0"
    }
  },
  
  "ui": {
    "displayName": {
      "pl": "Dane UrzƒÖdzenia",
      "en": "Device Data", 
      "de": "Ger√§tedaten"
    },
    "description": {
      "pl": "Monitorowanie urzƒÖdze≈Ñ przemys≈Çowych i danych sensor√≥w w czasie rzeczywistym",
      "en": "Industrial device monitoring and real-time sensor data management",
      "de": "Industrielle Ger√§te√ºberwachung und Echtzeit-Sensordatenverwaltung"
    },
    "icon": "üè≠",
    "color": "#42b883",
    "category": "monitoring",
    "layout": "fullscreen",
    "responsive": true,
    "theme": "industrial"
  },

  "data": {
    "defaults": {
      "deviceId": "DEVICE_001",
      "status": "ONLINE",
      "batteryLevel": 85,
      "firmwareVersion": "2.1.4",
      "updateFrequency": 2,
      "sensorThresholds": {
        "temperature": { "min": 18, "max": 25, "unit": "¬∞C" },
        "humidity": { "min": 40, "max": 70, "unit": "%" },
        "pressure": { "min": 1000, "max": 1020, "unit": "hPa" },
        "airQuality": { "min": 70, "max": 100, "unit": "%" },
        "noise": { "min": 0, "max": 50, "unit": "dB" },
        "vibration": { "min": 0, "max": 0.1, "unit": "g" }
      }
    },
    "validation": {
      "deviceId": {
        "required": true,
        "type": "string",
        "pattern": "^[A-Z0-9_]+$",
        "maxLength": 20
      },
      "batteryLevel": {
        "type": "number",
        "min": 0,
        "max": 100
      },
      "updateFrequency": {
        "type": "number",
        "min": 1,
        "max": 60
      }
    }
  },

  "responsive": {
    "breakpoints": {
      "7.9_inch_landscape": {
        "width": 1280,
        "height": 400,
        "optimizations": {
          "compactLayout": true,
          "reducedPadding": true,
          "smallerFonts": true,
          "gridColumns": "auto-fit, minmax(150px, 1fr)"
        }
      },
      "tablet": {
        "width": 768,
        "height": 1024,
        "optimizations": {
          "stackedLayout": true,
          "largerTouchTargets": true
        }
      }
    },
    "touchOptimizations": {
      "minTouchTarget": "44px",
      "gestureSupport": true,
      "hapticFeedback": false
    }
  },

  "accessibility": {
    "ariaLabels": {
      "pl": {
        "deviceStatus": "Status urzƒÖdzenia",
        "sensorGrid": "Siatka sensor√≥w",
        "exportButton": "Eksportuj dane urzƒÖdzenia",
        "refreshButton": "Od≈õwie≈º dane",
        "autoUpdateToggle": "Prze≈ÇƒÖcz automatycznƒÖ aktualizacjƒô"
      },
      "en": {
        "deviceStatus": "Device status",
        "sensorGrid": "Sensor grid", 
        "exportButton": "Export device data",
        "refreshButton": "Refresh data",
        "autoUpdateToggle": "Toggle auto update"
      },
      "de": {
        "deviceStatus": "Ger√§testatus",
        "sensorGrid": "Sensorraster",
        "exportButton": "Ger√§tedaten exportieren", 
        "refreshButton": "Daten aktualisieren",
        "autoUpdateToggle": "Automatische Aktualisierung umschalten"
      }
    },
    "keyboardNavigation": true,
    "screenReaderSupport": true,
    "highContrastMode": true,
    "focusManagement": true
  },

  "performance": {
    "lazyLoading": true,
    "virtualScrolling": false,
    "caching": {
      "enabled": true,
      "ttl": 300000,
      "maxSize": 50
    },
    "throttling": {
      "updateData": 1000,
      "exportData": 5000,
      "sensorRefresh": 500
    },
    "memoryManagement": {
      "maxHistorySize": 1000,
      "cleanup": true,
      "intervalCleanup": true
    }
  },

  "security": {
    "auditEvents": [
      "device_data_component_init",
      "device_data_component_cleanup", 
      "device_data_refresh",
      "device_data_updated",
      "device_data_error",
      "device_data_export",
      "device_data_exported",
      "device_export_error",
      "device_auto_update_started",
      "device_auto_update_stopped",
      "device_status_changed",
      "sensor_threshold_exceeded",
      "device_connection_lost",
      "device_connection_restored"
    ],
    "permissions": {
      "view": ["OPERATOR", "ADMIN", "SUPERUSER", "SERWISANT"],
      "export": ["ADMIN", "SUPERUSER", "SERWISANT"],
      "modify": ["ADMIN", "SUPERUSER"],
      "configure": ["SUPERUSER"]
    },
    "inputValidation": true,
    "outputSanitization": true,
    "sessionTracking": true
  },

  "i18n": {
    "defaultLanguage": "pl",
    "supportedLanguages": ["pl", "en", "de"],
    "fallbackLanguage": "en",
    "keys": [
      "device.page_title",
      "device.status_title", 
      "device.device_id",
      "device.status",
      "device.status_online",
      "device.status_offline", 
      "device.status_warning",
      "device.status_error",
      "device.uptime",
      "device.battery",
      "device.firmware",
      "device.last_update",
      "device.refresh",
      "device.auto_update", 
      "device.export",
      "device.sensor_data",
      "device.temperature",
      "device.humidity",
      "device.pressure",
      "device.air_quality",
      "device.noise",
      "device.vibration",
      "device.last_measurement",
      "device.connected",
      "device.disconnected",
      "device.realtime_data",
      "device.update_frequency",
      "common.back"
    ]
  },

  "testing": {
    "unitTests": {
      "coverage": 95,
      "framework": "vitest",
      "testFiles": [
        "deviceData.test.js"
      ]
    },
    "integrationTests": {
      "securityService": true,
      "i18nService": true,
      "vuexStore": true,
      "deviceAPI": true
    },
    "e2eTests": {
      "scenarios": [
        "device_monitoring_workflow",
        "sensor_data_export",
        "real_time_updates",
        "battery_level_alerts",
        "connection_status_changes"
      ]
    }
  },

  "deployment": {
    "environments": {
      "development": {
        "mockData": true,
        "debugMode": true,
        "simulationMode": true
      },
      "production": {
        "mockData": false,
        "debugMode": false,
        "simulationMode": false,
        "realDeviceAPI": true
      }
    },
    "buildOptions": {
      "minification": true,
      "compression": true,
      "bundling": false
    }
  }
}
