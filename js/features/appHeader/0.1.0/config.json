  "responsive": {
    "display79": {
      "enabled": true,
      "maxWidth": "1280px",
      "maxHeight": "400px",
      "optimizations": ["compact-layout", "reduced-padding"]
    }
  },
  "accessibility": {
    "ariaLabels": true,
    "keyboardNavigation": true,
    "highContrast": false,
    "screenReader": true
