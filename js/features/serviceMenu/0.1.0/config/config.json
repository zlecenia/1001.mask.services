{
  "metadata": {
    "name": "serviceMenu",
    "version": "0.1.0",
    "description": "Advanced service menu with diagnostics, calibration, backup management and maintenance tasks",
    "author": "MASKTRONIC C20 Development Team",
    "created": "2024-12-19",
    "migrated_from": "ServiceMenuTemplate.js",
    "dependencies": ["vue", "SecurityService", "store"]
  },
  "ui": {
    "layout": {
      "maxWidth": "1400px",
      "gridColumns": "repeat(auto-fit, minmax(300px, 1fr))",
      "cardPadding": "24px",
      "cardBorderRadius": "16px",
      "gridGap": "20px"
    },
    "colors": {
      "primary": "#667eea",
      "secondary": "#764ba2",
      "background": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
      "cardBackground": "#ffffff",
      "shadow": "rgba(0,0,0,0.1)",
      "serviceColors": {
        "diagnostics": "#007bff",
        "calibration": "#fd7e14", 
        "backup": "#28a745",
        "maintenance": "#6f42c1",
        "logs": "#20c997",
        "advanced": "#dc3545"
      },
      "statusColors": {
        "operational": "#28a745",
        "warning": "#ffc107",
        "error": "#dc3545",
        "executing": "#007bff"
      }
    },
    "animations": {
      "cardHover": "translateY(-4px)",
      "executionGlow": "executeGlow 1.5s infinite",
      "spinnerDuration": "1s",
      "transitionDuration": "0.3s"
    }
  },
  "services": {
    "diagnostics": {
      "id": "diagnostics",
      "iconKey": "diagnosticsIcon",
      "titleKey": "diagnosticsTitle",
      "descriptionKey": "diagnosticsDesc",
      "color": "blue",
      "executionTime": 3000,
      "requiredRole": ["ADMIN", "SUPERUSER", "SERWISANT"],
      "permissions": ["service.diagnostics.run", "system.status.view"],
      "auditLevel": "INFO"
    },
    "calibration": {
      "id": "calibration", 
      "iconKey": "calibrationIcon",
      "titleKey": "calibrationTitle",
      "descriptionKey": "calibrationDesc",
      "color": "orange",
      "executionTime": 5000,
      "requiredRole": ["SUPERUSER", "SERWISANT"],
      "permissions": ["service.calibration.run", "sensors.calibrate"],
      "auditLevel": "WARNING"
    },
    "backup": {
      "id": "backup",
      "iconKey": "backupIcon", 
      "titleKey": "backupTitle",
      "descriptionKey": "backupDesc",
      "color": "green",
      "executionTime": 4000,
      "requiredRole": ["ADMIN", "SUPERUSER", "SERWISANT"],
      "permissions": ["service.backup.create", "data.export"],
      "auditLevel": "INFO"
    },
    "maintenance": {
      "id": "maintenance",
      "iconKey": "maintenanceIcon",
      "titleKey": "maintenanceTitle", 
      "descriptionKey": "maintenanceDesc",
      "color": "purple",
      "executionTime": 2000,
      "requiredRole": ["ADMIN", "SUPERUSER", "SERWISANT"],
      "permissions": ["service.maintenance.view", "maintenance.schedule"],
      "auditLevel": "INFO"
    },
    "logs": {
      "id": "logs",
      "iconKey": "logsIcon",
      "titleKey": "logsTitle",
      "descriptionKey": "logsDesc", 
      "color": "teal",
      "executionTime": 1000,
      "requiredRole": ["ADMIN", "SUPERUSER", "SERWISANT"],
      "permissions": ["service.logs.view", "audit.view"],
      "auditLevel": "INFO"
    },
    "advanced": {
      "id": "advanced",
      "iconKey": "advancedIcon",
      "titleKey": "advancedTitle",
      "descriptionKey": "advancedDesc",
      "color": "red", 
      "executionTime": 1500,
      "requiredRole": ["SUPERUSER", "SERWISANT"],
      "permissions": ["service.advanced.access", "system.config.modify"],
      "auditLevel": "WARNING"
    }
  },
  "systemHealth": {
    "thresholds": {
      "cpu": {
        "warning": 70,
        "critical": 85
      },
      "memory": {
        "warning": 75,
        "critical": 90
      },
      "disk": {
        "warning": 80,
        "critical": 95
      }
    },
    "refreshInterval": 5000,
    "autoRefresh": true
  },
  "calibration": {
    "sensors": [
      {
        "name": "Pressure Sensor",
        "id": "pressure_sensor",
        "calibrationInterval": 90,
        "warningDays": 15,
        "type": "pressure"
      },
      {
        "name": "Flow Sensor", 
        "id": "flow_sensor",
        "calibrationInterval": 90,
        "warningDays": 15,
        "type": "flow"
      },
      {
        "name": "Temperature Sensor",
        "id": "temperature_sensor", 
        "calibrationInterval": 90,
        "warningDays": 15,
        "type": "temperature"
      }
    ],
    "autoCalibration": false,
    "calibrationNotifications": true
  },
  "backup": {
    "autoBackup": true,
    "backupInterval": 86400000,
    "retentionDays": 30,
    "compression": true,
    "location": "/backup/maskservice/",
    "includeConfigs": true,
    "includeLogs": false,
    "includeUserData": true
  },
  "performance": {
    "executionTimeout": 30000,
    "maxConcurrentServices": 1,
    "enableServiceQueue": true,
    "debounceDelay": 500
  },
  "security": {
    "auditServiceExecution": true,
    "auditServiceAccess": true,
    "validateServicePermissions": true,
    "requireAuthentication": true,
    "sessionValidation": true,
    "rateLimiting": {
      "enabled": true,
      "maxRequestsPerMinute": 10,
      "blockDuration": 300000
    }
  },
  "export": {
    "formats": ["json", "pdf", "csv"],
    "includeTimestamp": true,
    "includeUserInfo": true,
    "includeSystemHealth": true,
    "compression": false
  },
