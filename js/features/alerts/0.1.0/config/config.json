{
  "component": {
    "name": "alerts",
    "displayName": "Alerts & Notifications",
    "type": "alerts-dashboard",
    "category": "monitoring",
    "refreshInterval": 3000
  },
  "ui": {
    "layout": "list",
    "theme": "light",
    "maxVisible": 50,
    "autoRefresh": true,
    "soundAlerts": true,
    "colors": {
      "critical": "#e74c3c",
      "warning": "#f39c12",
      "info": "#3498db",
      "success": "#27ae60",
      "acknowledged": "#95a5a6"
    },
    "animations": {
      "newAlert": true,
      "acknowledge": true
    }
  },
  "alerts": {
    "priorities": [
      "critical",
      "warning", 
      "info"
    ],
    "categories": [
      "system",
      "safety",
      "maintenance",
      "network",
      "security"
    ],
    "autoAcknowledge": false,
    "retentionDays": 30,
    "maxActiveAlerts": 100
  },
  "notifications": {
    "sound": {
      "enabled": true,
      "volume": 0.7,
      "criticalSound": "alarm.wav",
      "warningSound": "beep.wav"
    },
    "email": {
      "enabled": false,
      "criticalOnly": true
    },
    "sms": {
      "enabled": false,
      "criticalOnly": true
    }
  },
  "permissions": {
    "canView": true,
    "canAcknowledge": true,
    "canDismiss": false,
    "canConfigure": false,
    "canExport": false,
    "allowedRoles": [
      "OPERATOR",
      "ADMIN",
      "SUPERUSER",
      "SERWISANT"
    ]
  },
  "filters": {
    "byType": true,
    "bySeverity": true,
    "byCategory": true,
    "byTimeRange": true,
    "bySource": true
  }
}
